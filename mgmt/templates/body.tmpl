<!DOCTYPE html>
<html lang="en">
  <head>
    <title>LFS Server Go! Management</title>
    <style type="text/css">
      @import "/mgmt/css/primer.css";
      .masthead{
        padding-top:1rem;
        padding-bottom:1rem;
        margin-bottom:1.5rem;
        background-color:#4183c4;
        color: white;
      }
      td {
        padding-right: 1rem;
        padding-bottom: 1rem;
      }
    </style>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
		<script src="{{.Config.UrlContext}}/mgmt/js/mgmt.js"></script>
  </head>
  <body>
    <header class="masthead">
    <div class="container">
      <h1>LFS Test Server</h1>
    </div>
    </header>

    <div class="container">
      <div class="columns">
        <div class="one-fourth column">
          <nav class="menu">
            <a class="menu-item {{if eq .Name "index"}}selected{{end}}" href="{{.Config.UrlContext}}/mgmt">LFS Server</a>
            <a class="menu-item {{if eq .Name "users"}}selected{{end}}" href="{{.Config.UrlContext}}/mgmt/users">Users</a>
            <a class="menu-item {{if eq .Name "objects"}}selected{{end}}" href="{{.Config.UrlContext}}/mgmt/objects">Objects</a>
            <a class="menu-item {{if eq .Name "projecs"}}selected{{end}}" href="{{.Config.UrlContext}}/mgmt/projects">Projects</a>
          </nav>
        </div>
        <div class="three-fourths column">
          {{template "content" .}}
      </div>
    </div>
  </body>
</html>
